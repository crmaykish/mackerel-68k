MEMORY
{
	RAM(RX) : ORIGIN = 0x1000, LENGTH = 0x08000000 - 0x1000 - 0x80000 # Has access to all DRAM except the 512 KB reserved at the top for the bootloader and stack
}

SECTIONS
{
    .text : { *(.text*) } > RAM
    .rodata : { *(.rodata*) } > RAM
    .bss (NOLOAD) : {
        _sbss = .;
        *(.bss*)
        *(COMMON)
        _ebss = .;
    } > RAM
    _end = .;
    
    _heap_end = ORIGIN(RAM) + LENGTH(RAM);
}
