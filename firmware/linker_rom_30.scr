MEMORY
{
  	ROM(RX) : ORIGIN = 0xE0000000, LENGTH = 0x80000
	RAM(RX) : ORIGIN = 0x400, LENGTH = 0x80000 - 0x400 - 0x1000 # 0x400 offset for vectors, 0x1000 reserved for stack space
}

SECTIONS
{
	.vectors 0xE0000000 : { *(.vectors) } > ROM
	.text : { *(.text) } > ROM
	.rodata : { *(.rodata) } > ROM
	.bss 0x400 : { *(.bss) } > RAM

	/* Export RAM info to bootloader (informational only) */
	__sram_start = 0x00;
	__sram_length = 0x80000;
	__dram_start = 0x80000000;
	__dram_length = 0x8000000;
}
