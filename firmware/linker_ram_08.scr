MEMORY
{
    /* RAM starts after vectors at 0x400, top 4K reserved for stack, another 4k below that is used by the bootloader */
	RAM(RWX) : ORIGIN = 0x400, LENGTH = 0x380000 - 0x400 - 0x1000 - 0x1000
}

SECTIONS
{
	.text : { *(.text*) } > RAM
    .rodata : { *(.rodata*) } > RAM
    .bss (NOLOAD) : {
        _sbss = .;
        *(.bss*)
        *(COMMON)
        _ebss = .;
    } > RAM
    _end = .;
    
    _heap_end = ORIGIN(RAM) + LENGTH(RAM);
}
