MEMORY
{
  	ROM(RX) : ORIGIN = 0x380000, LENGTH = 0x7C000
	RAM(RW) : ORIGIN = 0x380000 - 0x1000, LENGTH = 0x1000
}

SECTIONS
{
	.vectors 0x380000 : { *(.vectors) } > ROM
	.text : { *(.text) } > ROM
	.rodata : { *(.rodata) } > ROM
	.bss 0x380000 - 0x1000 : { *(.bss) } > RAM

	/* Export RAM info to bootloader (informational only) */
	__sram_start = 0x00;
	__sram_length = 0x380000;
	__dram_start = 0x00;
	__dram_length = 0x00;
}
